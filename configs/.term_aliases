up() {                                          # move up by any number of directories
  if [ -z $1 ]; then
    cd ..
    return 0
  fi
  COUNTER=$1
  if [[ $COUNTER =~ ^[\-0-9]+$ ]] && (( COUNTER > 0)); then
    while [[ $COUNTER -gt 0 ]]
    do
      UP="${UP}../"
      COUNTER=$(( $COUNTER -1 ))
    done
    echo "cd $UP"
    cd $UP
    UP=''
    return 0
  else
    echo 'Usage: up n'
    return 1
  fi
}
